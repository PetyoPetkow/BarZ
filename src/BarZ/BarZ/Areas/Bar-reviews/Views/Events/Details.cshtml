@model EventViewModel


@{ ViewData["Title"] = Model.EventName; }

<div class="container">
    <div class="halfScreenBox">
        <h1>@Html.DisplayFor(model => model.EventName)</h1>
    </div>
    <div class="halfScreenBox">
        <a class="col-md-4 btn btn-info btnsViewRight" href="##" onClick="history.go(-1); return false;">Go back</a>
    </div>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateAndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateAndTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fee)
        </dt>
        @if (Model.Fee != null)
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FeeInDollars)
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                <span>-</span>
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Info)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Info)
        </dd>
    </dl>
</div>
<div class="btnsViewRight">
    @if (this.User.IsInRole(RolesConstants.AdminRoleName))
    {
        <a class="btn btn-info" asp-action="Update" asp-route-id="@Model.Id">Update</a>
        <span>|</span>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    }
</div>