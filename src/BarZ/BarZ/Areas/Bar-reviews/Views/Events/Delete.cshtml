@model EventDeleteBindingModel

@{
    ViewData["Title"] = "Delete";
}
<br />
<h3>Are you sure you want to delete this event?</h3>
<div>
    <h1 style="margin-left:30px">@Html.DisplayFor(model => model.EventName)</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bar)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bar.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateAndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateAndTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Info)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Info)
        </dd>
    </dl>

    <form class="halfScreenBox" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger w-50" />
    </form>

    <form class="halfScreenBox">
        <a asp-action="Index" class="btn btn-info w-50">Cancel</a>
    </form>

</div>
