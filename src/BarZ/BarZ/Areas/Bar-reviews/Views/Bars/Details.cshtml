@model BarViewModel

@{
    ViewData["Title"] = "Details";

}

<h1>@Html.DisplayFor(model => model.Name)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Work Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BeginningOfTheWorkDay) -
            @Html.DisplayFor(model => model.EndOfTheWorkDay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FacebookPageUrl)
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.FacebookPageUrl">@Html.DisplayFor(model => model.FacebookPageUrl)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Destinations" asp-action="Details" asp-route-id="@Model.Destination.Id" class="btn-outline-success">@Html.DisplayFor(model => model.Destination.Name)</a>
        </dd><br /><br /><br />

        <div>
            <h4><a asp-controller="Bars" asp-action="ShowBarsInWhichTheFeatureIsPresent" asp-route-id="@Model.Id">Features:</a></h4>

            @if (this.Model.Features.Any())
            {
                int i = 0;
                string[] features = new string[100];
                foreach (var feature in Model.Features)
                {
                    i++;
                    features[i] = feature.FeatureName;
                }
                var featuresInRow = String.Join(", ", features.Where(s => !string.IsNullOrEmpty(s)));

                <ul>
                    @featuresInRow
                </ul>
            }
            else
            {
                <ul>No Information.</ul>
            }
        </div>

    </dl>

</div>
<div class="btnsViewRight marginBottom100">
    <a class="btn btn-info" asp-action="Update" asp-route-id="@Model.Id">Update</a> |
    <a class="btn btn-info" asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
    <a class="btn btn-info" asp-action="Index">Back to List</a>
</div>
