@model BarZ.Data.Models.Destination

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="halfScreenBox">
        <h3>Are you sure you want to remove this destination?</h3>
    </div>
</div>

<div>
    <h1 style="margin:100px">@Html.DisplayFor(model => model.Name)</h1>

    <form class="halfScreenBox" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger w-50" />
    </form>

    <form class="halfScreenBox">
        <a asp-action="Index" class="btn btn-info w-50">Cancel</a>
    </form>
</div>
